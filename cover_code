    is_walking = True
    walk_direction = "left"
    walk_frame_index = 0

def start_walk_right():
    global is_walking, walk_direction, walk_frame_index, waiting_to_walk_right
    is_walking = True
    walk_direction = "right"
    walk_frame_index = 0
    waiting_to_walk_right = False

